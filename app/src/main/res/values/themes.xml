<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDeliveryPrototype" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DishLogoStyle">
        <item name="android:background">@drawable/dish_background_light</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_marginEnd">@dimen/base_40dp</item>
        <item name="android:layout_marginBottom">@dimen/base_60dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>
</resources>